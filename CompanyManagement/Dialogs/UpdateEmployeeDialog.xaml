<Window x:Class="CompanyManagement.Dialogs.UpdateEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyManagement.Dialogs"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:CompanyManagement.UserControls"
        DataContext="{StaticResource UpdateEmployeeVM}"
        x:Name="updateEmployeeWindow"
        WindowStartupLocation="CenterScreen"
        Title="UpdateEmployeeDialog" Height="600" Width="920">
    <Grid Margin="0 10">
        <StackPanel Height="564" VerticalAlignment="Center" HorizontalAlignment="Right" Width="920">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
            <Grid Grid.Row="0">
                <uc:EmployeeInputUC DataContext="{Binding EmployeeInputDataContext}"></uc:EmployeeInputUC>
            </Grid>
            <Grid Grid.Row="1">
                <Button
                    Content="Lưu"
                    Command="{Binding UpdateEmployeeCommand}"
                    CommandParameter="{Binding ElementName=updateEmployeeWindow}"
                    Width="70"
                    Background="ForestGreen"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="Thêm nhân viên mới">
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
