<Window x:Class="CompanyManagement.Views.Dialogs.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyManagement.Views.Dialogs"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Name="alertDialog"
        mc:Ignorable="d"
        Title="AlertDialog" Height="258" Width="358">

    <Border Height="250"
            Width="350" 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Background="Teal">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="5"></DropShadowEffect>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" 
                           Text="{Binding Title}" 
                           Margin="20 0"
                           FontSize="17"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>
            <Border Grid.Row="1" 
                    Background="White" 
                    Margin="10 5" 
                    CornerRadius="10">
                <TextBlock Text="{Binding Message}"  FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
            </Border>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                        Background="White" 
                        HorizontalAlignment="Right" 
                        Width="100"
                        Content="Yes"
                        Command="{Binding YesCommand}"
                        CommandParameter="{Binding ElementName=alertDialog}"
                        Margin="20 0"
                        Foreground="Black">
                </Button>
                <Button Grid.Column="1" 
                        Background="White" 
                        HorizontalAlignment="Left"     
                        Width="100"
                        Content="No"
                        Command="{Binding NoCommand}"
                        Margin="20 0"
                        Foreground="Black">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
