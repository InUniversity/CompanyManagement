<Window x:Class="CompanyManagement.Views.Dialogs.AddEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:CompanyManagement.Views.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        x:Name="addEmployeeWindow"
        Title="EmployeeInputWindow" Height="550" Width="1100" MinHeight="550" MinWidth="1100">
    <Grid Margin="10">
        <StackPanel>
            <uc:EmployeeInputUC DataContext="{Binding EmployeeInputDataContext}" Margin="20" />
            <Button
                    Content="Thêm"
                    Command="{Binding AddEmployeeCommand}"
                    CommandParameter="{Binding ElementName=addEmployeeWindow}"
                    Width="500"
                    Height="50"
                    Background="ForestGreen"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="Thêm nhân viên mới" />
        </StackPanel>
    </Grid>
</Window>