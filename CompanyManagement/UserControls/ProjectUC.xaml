<UserControl x:Class="CompanyManagement.UserControls.ProjectUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompanyManagement.UserControls"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"    
             DataContext="{StaticResource ProjectVM}"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            Background="{DynamicResource MaterialDesignPaper}"
            FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
    <Grid>
        <materialDesign:DialogHost DialogContentUniformCornerRadius="20" Name="dialogAddProject">
            <materialDesign:DialogHost.DialogContent >
                <StackPanel Margin="10" Width="400"  Height="400">
                    <TextBlock Margin="5" Text="Thêm dự án mới" FontSize="25"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBox
                                Text="{Binding Name}"
                                Margin="10"
                                materialDesign:HintAssist.Hint="Tên dự án"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                                MaxLength="200"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBox
                                Text="{Binding ID}"
                                Margin="10"
                                materialDesign:HintAssist.Hint="Mã dự án"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                                MaxLength="200"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock Margin="5" Text="thời gian kết thúc" FontSize="20" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Oblique"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="3">
                            <DatePicker
                                SelectedDate="{Binding DayEnd}"
                                Margin="10" 
                              materialDesign:HintAssist.Hint="ngày"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                        </Grid>
                        <Grid Grid.Row="4">
                            <materialDesign:TimePicker
                                SelectedTime="{Binding TimeEnd}"
                              Margin="10"                                               
                              materialDesign:HintAssist.Hint="giờ"
                              Is24Hours="True"
                              Style="{StaticResource MaterialDesignOutlinedTimePicker}" />
                        </Grid>
                        <Grid Grid.Row="5">
                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,8,8,0"
                                    Command="{Binding AddProjectCommand}"                                   
                                    Content="Chấp nhận"
                                    IsDefault="True"
                                    Style="{StaticResource MaterialDesignFlatButton}">
                                    <Button.CommandParameter>
                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                            True
                                        </system:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                                <Button
                                Margin="0,8,8,0"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                Content="Thoát"
                                IsCancel="True"
                                Style="{StaticResource MaterialDesignFlatButton}">
                                    <Button.CommandParameter>
                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                            False
                                        </system:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
            <Border
                Margin="0"
                Height="auto"
                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="2"
                ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="*" />
                        <RowDefinition  Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView Grid.Row="0" ItemsSource="{Binding Projects}" >
                        <ListView.View>
                            <GridView>
                                <GridView.Columns >
                                    <GridViewColumn Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PopupBox
                                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                        StaysOpen="True">
                                                        <Grid Width="200" Margin="8,8,8,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="*" />
                                                            </Grid.RowDefinitions>
                                                            <Grid Grid.Row="0">
                                                                <Button Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}" ToolTip="Cập nhật">
                                                                    <materialDesign:PackIcon Kind="Pencil"/>
                                                                </Button>
                                                            </Grid>
                                                            <Grid Grid.Row="1">
                                                                <Button Style="{StaticResource MaterialDesignRaisedLightButton}" ToolTip="Xóa">
                                                                    <materialDesign:PackIcon Kind="Delete" />
                                                                </Button>
                                                            </Grid>
                                                            <Grid Grid.Row="2">
                                                                <Button Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}" ToolTip="Thoát" Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}">
                                                                    <materialDesign:PackIcon Kind="ArrowLeftCircle" />
                                                                </Button>
                                                            </Grid>
                                                        </Grid>
                                                    </materialDesign:PopupBox>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100">
                                        <GridViewColumn.Header>
                                            <StackPanel>
                                                <TextBlock Text="Chọn"></TextBlock>
                                                <CheckBox ></CheckBox>
                                            </StackPanel>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox Margin="21"></CheckBox>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Tên dự án" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox
                                                        Text="{Binding Name}"
                                                        Width="400"
                                                        VerticalAlignment="Top"
                                                        AcceptsReturn="True"                                                 
                                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                                        TextWrapping="Wrap"
                                                        />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Mã dự án"  Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox
                                                        Text="{Binding ID}"
                                                        Width="400"
                                                        VerticalAlignment="Top"
                                                        AcceptsReturn="True"                                                 
                                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                                        TextWrapping="Wrap"
                                                        />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Bắt đầu"  Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox
                                                        Text="{Binding Start}"
                                                        Width="400"
                                                        VerticalAlignment="Top"
                                                        AcceptsReturn="True"                                                 
                                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                                        TextWrapping="Wrap"
                                                        />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Két thúc"  Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox
                                                        Text="{Binding End}"
                                                        Width="400"
                                                        VerticalAlignment="Top"
                                                        AcceptsReturn="True"                                                 
                                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                                        TextWrapping="Wrap"
                                                        />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Tiến độ"  Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox
                                                        Text="{Binding Progress}"
                                                        Width="400"
                                                        VerticalAlignment="Top"
                                                        AcceptsReturn="True"                                                 
                                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                                        TextWrapping="Wrap"
                                                        />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                        
                    </ListView>
                    <materialDesign:ColorZone Height="80" Grid.Row="1"  Effect="{DynamicResource MaterialDesignShadowDepth5}" Mode="PrimaryMid">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="ExtraBold"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="Danh sách dự án" />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                    FontSize="24"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontWeight="ExtraBold"
                                    Text="(0)" />
                            </Grid>
                        </Grid>
                    </materialDesign:ColorZone>
                    <Button
                        Grid.Row="0"
                        Width="60"
                        Height="60"
                        Margin="0,0,28,-20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        ToolTip="Thêm dự án mới"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        Content="{materialDesign:PackIcon Kind=Plus , Size=30}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" />
                </Grid>
            </Border>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>
